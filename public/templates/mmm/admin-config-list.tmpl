<div class="row-fluid">

  <div class="input-append pull-right">
    <input class="search-query" type="text" placeholder="search by id..." ng-model="model.searchId" ng-disabled="model.isInEditMode">
    <button class="close" ng-click="ctrl.clearSearchId()" ng-disabled="model.isInEditMode">&times;</button>
  </div>

  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>id</th>
      <th>value</th>
      <th>type</th>
    </tr>
    </thead>
    <tbody>
    <tr ng-repeat="key in model.config.$keys | filter:model.searchId">
      <td style="width: 40%">
        {{ key }}
      </td>
      <td style="width: 40%">
        <edit-on-click value="model.config[key].value" on-edit-on="ctrl.onEditOn()" on-edit-off="ctrl.onEditOff()"></edit-on-click>
      </td>
      <td style="width: 20%">
        {{ model.config[key].type }}
      </td>
    </tr>
    </tbody>
  </table>

  <div class="pull-right">
    <a class="btn" type="button" ng-click="ctrl.saveConfig()" ng-disabled="model.isInEditMode">Save config</a>
  </div>

</div>
