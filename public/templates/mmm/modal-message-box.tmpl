<div class="modal-header">
  <h4>{{ title }}</h4>
</div>
<div class="modal-body">
  <div class="text-info">{{ msg }}</div>
  <div class="text-error" ng-show="warn.length > 0">{{ warn }}</div>
</div>
<div class="modal-footer">
  <button ng-repeat="btn in buttons" ng-click="close(btn.result)" class="btn" ng-class="btn.cssClass">
    {{ btn.label }}
  </button>
</div>
