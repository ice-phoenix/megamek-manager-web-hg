<div class="row-fluid">

  <div class="span9">

    <div class="row-fluid">
      <div class="span9 offset3">
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th><a ng-click="toggleSortBy('port')">
              Port<i ng-class="getSortByCls('port')"></i>
            </a></th>
            <th><a ng-click="toggleSortBy('players')">
              Players<i ng-class="getSortByCls('players')"></i>
            </a></th>
            <th><a ng-click="toggleSortBy('status')">
              Status<i ng-class="getSortByCls('status')"></i>
            </a></th>
            <th>
              Action
            </th>
          </tr>
          </thead>
          <tbody>
          <tr ng-class="servers.get(id).statusCls" ng-repeat="id in servers.ids | orderBy:getSortByKey:sortByReversed">
            <td>{{servers.get(id).port}}</td>
            <td>{{servers.get(id).players.join(', ')}}</td>
            <td>{{servers.get(id).status}}</td>
            <td><a class="close danger" ng-click="stopServer(id)">&times;</a></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row-fluid">
      <div class="input-append pull-right">
        <a class="btn" type="button" ng-click="startServer()">Start server on</a>
        <input class="input-mini" type="number" ng-model="startServerPort">
      </div>
    </div>

  </div>

  <div class="span3" ng-include="'/assets/templates/mmm/notification-list.tmpl'"></div>

</div>
