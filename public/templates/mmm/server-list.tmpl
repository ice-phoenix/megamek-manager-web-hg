<div class="row-fluid">

  <div class="span9">

    <div class="row-fluid">
      <div class="span9 offset3">
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th><a ng-click="setSortBy('port')">
              Port<i ng-class="getSortByCls('port')"></i>
            </a></th>
            <th><a ng-click="setSortBy('players.length')">
              Players<i ng-class="getSortByCls('players.length')"></i>
            </a></th>
            <th><a ng-click="setSortBy('status')">
              Status<i ng-class="getSortByCls('status')"></i>
            </a></th>
          </tr>
          </thead>
          <tbody>
          <tr ng-class="srv.statusCls" ng-repeat="srv in servers | orderBy:sortBy:sortByReversed">
            <td>{{srv.port}}</td>
            <td>{{srv.players.join(', ')}}</td>
            <td>{{srv.status}}</td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span2 offset10">
        <div class="row-fluid input-append pull-right">
          <a class="btn span7" type="button" ng-click="startServer()">Start server on</a>
          <input class="span5" type="number" ng-model="startServerPort">
        </div>
      </div>
    </div>

  </div>

  <div class="span3" ng-include="'/assets/templates/mmm/notification-list.tmpl'"></div>

</div>
